def call_OS():
    platform.platform()
    if 'Linux-' in platform.platform():
        return 'Linux detected.'
    if 'Windows-' in platform.platform():
        return 'Windows detected.'
    
print(call_OS())

sleep(3)

def Get_Arp():
    
    platform.platform()

    if 'Windows-' in platform.platform():
        try:
            print(subprocess.check_output(("arp", "-a")))
        except:
            return 'Next'
    if 'Linux-' in platform.platform():
        import python_arptable
        try:
           python_arptable.get_arp_table()
        except:
           return 'Next'
    elif 'Darwin-' in platform.platform():
        print "System not recognized"
        raise SystemExit
    sleep(5)
print(Get_Arp())

ip_address = raw_input('What is the IP Address of the system you would like to call for PCAP: ')

print('The remote IP Address is: ' + ip_address + '. Processing:')

def ping_ip():
    
    import os

    hostname = ip_address
    response = os.system("ping " + hostname)

    if response == 0:
        return hostname, 'is up. Retreiving most recent PCAP record: Beginning SSH connection...'
        
    else:
        return hostname, 'is not reachable. Terminating...   '
        raise SystemExit
print(' ')

ping_ip()

sleep(3)
print(' ')

print('Initiating SSH with remote host. Please wait...')


sleep (3)

print 'This was a test. Good-bye.'

print ' '
sleep(3)
raise SystemExit
 
