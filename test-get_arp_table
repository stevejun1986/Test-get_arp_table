def call_OS():
    platform.platform()
    if 'Linux-' in platform.platform():
        return 'Linux detected.'
    if 'Windows-' in platform.platform():
        return "Windows detected."
    else:
        return 'You may not proceed.'

print(call_OS())
sleep(3)


def Get_Arp():
    
    platform.platform()

    if 'Windows-' in platform.platform():
        try:
            print(subprocess.check_output(("arp", "-a")))
        except:
            return 'Next'
    if 'Linux-' in platform.platform():
        import python_arptable
        try:
           python_arptable.get_arp_table()
        except:
           return 'Next'
    elif 'Darwin-' in platform.platform():
        return 'System not recognized'
        raise SystemExit

print(Get_Arp())

def ping_ip():

	ip_address = input('What is the IP address of the remote system you would like to call for ARP: ')
	print('The remote IP address is: ' + ip_address + '. Processing.')
	hostname = ip_address
	ping_str = 'ping -n 1 ' + hostname

	response = os.system(ping_str)
	sleep(3)

	if response == 0:
		print(hostname,' is up. Preparing to connect with SSH.')

	if response is not 0:
		print(hostname,' is not responding. Terminating...')
		raise SystemExit

print(ping_ip())

import paramiko

sleep(1)
print("""

        Initiating SSH with remote host. Pleast wait...
        """)
sleep(4)
print("""
        Connecting. Some input may be required...
        """)

#print('This was only a test. Exiting...')
