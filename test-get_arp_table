import stdiomask

def ssh_connect():
	
#	if len(sys.argv) < 4:
#		print('args missing')
#		sys.exit(1)

	hostname = input('Please confirm the IP Address: ')
	password = stdiomask.getpass('Please enter the password: ', mask='*')
	command1 = "arp show"

	username = input('Enter the user name: ')
	port = 22

	try:
		client = paramiko.SSHClient()
		client.load_system_host_keys()
		#client.set_missing_host_key_policy(paramiko.WarningPolicy())
		#client.AutoAddPolicy()
		client.set_missing_host_key_policy(paramiko.AutoAddPolicy())
		client.connect(hostname, port=port, username=username, password=password)
		sleep(5)
		stdin, stdout, stderr = client.exec_command('arp show')
		#print(sys.stderr())
		#print(stdout.read())
		sleep(5)
		for line in stdout:
			print(line)

	finally:
		client.close()

ssh_connect()
